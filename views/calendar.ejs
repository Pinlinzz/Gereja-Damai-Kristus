                <li><a href="/login">Login</a></li>
            </ul>
        </div>
    </nav>

    <main class="page-content">
        <div class="container">
            <header class="page-header">
                <h1>Kalendar Bulanan </h1>

            </header>

            <div class="calendar-container">
                <div id='calendar'></div>
            </div>
        </div>
    </main>

    <%- include('partials/_footer') %>

    <script>
        // Inisialisasi FullCalendar
        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth', // Tampilan awal adalah bulan
                initialDate: '2025-10-19',   // Atur ke tanggal saat ini atau tanggal dari gambar
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [
                    // Anda bisa menambahkan acara di sini
                    // Contoh:
                    {
                      title: 'Christmas Eve Mass',
                      start: '2025-12-24T22:00:00'
                    }
                ]
            });
            calendar.render();
        });
    </script>
</body>
</html>